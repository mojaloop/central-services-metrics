{
  "name": "@mojaloop/central-services-metrics",
  "version": "11.0.1",
  "description": "Shared code for metrics generation",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/config",
    "/dist",
    "/protos"
  ],
  "scripts": {
    "test": "npm run test:unit | faucet",
    "pretest": "npm run build",
    "standard": "npx ts-standard",
    "standard:fix": "npx ts-standard --fix",
    "lint": "npm run standard",
    "lint:fix": "npm run standard:fix",
    "build": "npx tsc",
    "watch": "npx tsc -w",
    "test:unit": "npx ts-node node_modules/tape/bin/tape 'test/unit/**/*.test.ts'",
    "test:xunit": "npm run test:unit | tap-xunit",
    "test:coverage": "nyc --require ts-node/register tape test/unit/**/*.test.{ts,js} | tap-spec; nyc report ---reporter=text",
    "git:standardFix": "standard --fix",
    "audit:resolve": "npx resolve-audit --production",
    "audit:check": "npx check-audit --production",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u"
  },
  "pre-commit": [
    "dep:check",
    "build",
    "lint",
    "test:unit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/central-services-metrics.git"
  },
  "keywords": [
    "metrics",
    "central",
    "services"
  ],
  "author": "ModusBox",
  "contributors": [
    "Shashikant Hirugade <shashikant.hirugade@modusbox.com>",
    "Georgi Georgiev <georgi.georgiev@modusbox.com>",
    "Valentin Genev <valentin.genev@modusbox.com>",
    "Miguel de Barros <miguel.debarros@modusbox.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/central-services-metrics/issues"
  },
  "homepage": "https://github.com/mojaloop/central-services-metrics#readme",
  "dependencies": {
    "prom-client": "13.2.0"
  },
  "devDependencies": {
    "@types/node": "16.6.2",
    "@types/tape": "4.13.2",
    "debug": "4.3.2",
    "faucet": "0.0.1",
    "npm-audit-resolver": "2.3.1",
    "npm-check-updates": "11.8.3",
    "nyc": "15.1.0",
    "pre-commit": "1.2.2",
    "standard": "16.0.3",
    "tap-spec": "5.0.0",
    "tap-xunit": "2.4.1",
    "tape": "5.3.1",
    "tapes": "4.1.0",
    "ts-node": "10.2.1",
    "ts-standard": "^10.0.0",
    "tslint": "6.1.3",
    "typedoc": "0.21.6",
    "typescript": "4.3.5"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "test/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ]
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "/dist",
      "/test"
    ]
  }
}
