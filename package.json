{
  "name": "@mojaloop/central-services-metrics",
  "version": "10.2.0",
  "description": "Shared code for metrics generation",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/config",
    "/dist",
    "/protos"
  ],
  "scripts": {
    "test": "npm run test:unit | faucet",
    "pretest": "npm run build",
    "standard": "standard",
    "build": "tsc",
    "watch": "tsc -w",
    "test:unit": "ts-node node_modules/tape/bin/tape 'test/unit/**/*.test.ts'",
    "test:xunit": "npm run test:unit | tap-xunit",
    "test:coverage": "nyc --reporter=lcov --require ts-node/register tape test/unit/**/*.test.{ts,js} | tap-spec; nyc report ---reporter=text",
    "git:standardFix": "standard --fix",
    "audit:resolve": "SHELL=sh resolve-audit --production",
    "audit:check": "SHELL=sh check-audit --production",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u"
  },
  "pre-commit": [
    "dep:check",
    "build",
    "standard",
    "test:unit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/central-services-metrics.git"
  },
  "keywords": [
    "metrics",
    "central",
    "services"
  ],
  "author": "ModusBox",
  "contributors": [
    "Shashikant Hirugade <shashikant.hirugade@modusbox.com>",
    "Georgi Georgiev <georgi.georgiev@modusbox.com>",
    "Valentin Genev <valentin.genev@modusbox.com>",
    "Miguel de Barros <miguel.debarros@modusbox.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/central-services-metrics/issues"
  },
  "homepage": "https://github.com/mojaloop/central-services-metrics#readme",
  "dependencies": {
    "prom-client": "12.0.0"
  },
  "devDependencies": {
    "@types/node": "14.0.5",
    "@types/tape": "4.13.0",
    "debug": "4.1.1",
    "faucet": "0.0.1",
    "npm-audit-resolver": "2.2.0",
    "npm-check-updates": "6.0.1",
    "nyc": "15.0.1",
    "pre-commit": "1.2.2",
    "standard": "14.3.4",
    "tap-spec": "5.0.0",
    "tap-xunit": "2.4.1",
    "tape": "5.0.1",
    "tapes": "4.1.0",
    "ts-node": "8.10.1",
    "tslint": "6.1.2",
    "typedoc": "0.17.7",
    "typescript": "3.9.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "test/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ]
  },
  "standard": {
    "ignore": [
      "/dist"
    ]
  }
}
